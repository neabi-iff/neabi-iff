- extends "zinnia/base.html"

- load staticfiles
- load bootstrap3
- load bootstrap_pagination

- block content
  .panel.panel-neabi
    .panel-heading
      .acervo
        Documento
        %button{'class':'btn btn-orange pull-right btn-sm', 'type':'button', :value => 'Voltar', :onClick =>'history.go(-1)', :aria-label => "Left Align"}
          %span.glyphicon.glyphicon-chevron-left{:aria-hidden =>"true"}
          Voltar
    .panel-body
      %blockquote.box-fundo.detail
        %h2
          = documento.titulo
          - if documento.arquivo
            %a{'class':'btn btn-orange pull-right', href: "#{ documento.arquivo.url}", :role => "button"}
              Acessar Arquivo
        %div.well.well-table
          %table.table.table-hover
            %tr
              %th Código de Referência:
              %td
                = documento.codigo_referencia
            %tr
              %th Notas de Conservação:
              %td
                = documento.nota_conservacao
            %tr
              %th Data do Documento:
              %td
                = documento.data
            %tr
              %th Dimensão de Suporte:
              %td
                = documento.dimensao_suporte
            %tr
              %th Nível de Descrição:
              %td
                = documento.nivel_descricao
            %tr
              %th Nome(s) do(s) Produtor(es):
              %td
                = documento.autor
            %tr
              %th Ámbito e Conteúdo:
              %td
                = documento.ambito_conteudo|safe
            %tr
              %th Condição de Acesso:
              %td
                = documento.condicao_acesso
            %tr
              %th Notas Gerais:
              %td
                = documento.nota_gerais|safe