- extends "base_site.html"

- load i18n zinnia
- load staticfiles
- load bootstrap3
- load bootstrap_pagination


- block content
  .panel.neabi-panel
    .panel-heading.neabi-heading.panel-destaque-header
      %h1.acervo {{ documento_list.0.serie.nome}}
      %p Documentos:
    - for documento in documento_list
      .panel-body.panel-destaque-body
        %blockquote.box-fundo.detail
          %h2
            = documento.titulo
            %button{'class':'btn btn-orange', 'type':'button','data-toggle':'collapse', 'data-target':'#{{documento.id}}', 'aria-expanded':'false', 'aria-controls':'{{documento.id}}'}
              Mais detalhes
            - if documento.arquivo
              %a{'class':'btn btn-orange', href: "{{ documento.arquivo.url}}"}
                Acessar Documento
            %p Código de Referência:
              = documento.codigo_referencia
          %div.collapse{'id':'{{documento.id}}'}
            %div.well.well-table
              %table.table.table-hover
                %tr
                  %th Notas de Conservação:
                  %td
                    = documento.nota_conservacao
                %tr
                  %th Data do Documento:
                  %td
                    = documento.data
                %tr
                  %th Dimensão de Suporte:
                  %td
                    = documento.dimensao_suporte
                %tr
                  %th Nível de Descrição:
                  %td
                    = documento.nivel_descricao
                %tr
                  %th Nome(s) do(s) Produtor(es):
                  %td
                    = documento.autor
                %tr
                  %th Ámbito e Conteúdo:
                  %td
                    = documento.ambito_conteudo|safe
                %tr
                  %th Condição de Acesso:
                  %td
                    = documento.condicao_acesso
                %tr
                  %th Notas Gerais:
                  %td
                    = documento.nota_gerais|safe
    -empty
      .panel-body.panel-destaque-body
        %blockquote.box-fundo.detail
          %h2 Não possui documentos para esta série.
    - if is_paginated
      .text-center
        - bootstrap_paginate page_obj range=5