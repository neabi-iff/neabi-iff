- extends "base_site.html"

- load staticfiles
- load bootstrap3
- load bootstrap_pagination

- block content
  .panel.neabi-panel
    .panel-heading.neabi-heading.panel-destaque-header
      %p.navbar-right.mozilla Para melhor viasualização, utilize:
        %a{ 'href':'http://br.mozdev.org/', 'target':"_blank"}
          %img{'src':"{% static 'img/mozilla.png' %}", class:"img-responsive",'alt':"Firefox"}
      %h1.acervo ACERVOS
      %br
    - for fundo in fundo_list
      - if not fundo.projeto
        .panel-body.panel-destaque-body
          %blockquote.box-fundo.detail
            .row
              - if fundo.imagem
                .col-xs-5.col-sm-5.col-md-4.col-lg-3
                  %img{ "src": "={fundo.imagem.url}", class: 'img-responsive'}
              %h2
                %a{ href: "{% url 'serie-list-2' fundo.slug %}"}
                 = fundo.nome
                %small
                  = fundo.biblioteca
              %p
                = fundo.descricao|safe

    -empty
      .panel-body.panel-destaque-body
        %blockquote.box-fundo.detail
          %h2 Não tem Fundo cadastrado no momento.
    - if is_paginated
      .text-center
        - bootstrap_paginate page_obj range=5