- extends "base_site.html"

- load staticfiles
- load bootstrap3
- load bootstrap_pagination

- block content
  .panel.neabi-panel
    .panel-heading.neabi-heading
      %p.navbar-right.mozilla Para melhor viasualização, utilize:
        %a{ 'href':'http://br.mozdev.org/', 'target':"_blank"}
          %img{'src':"{% static 'img/mozilla.png' %}", class:"img-responsive",'alt':"Firefox"}
      %h1.acervo PROJETOS
    .panel-body
      - for projeto in projeto_list
        %blockquote.box-fundo
          .row
            - if projeto.fundo.imagem
              .col-xs-5.col-sm-5.col-md-4.col-lg-3
                %img{ "src": "={projeto.fundo.imagem.url}", class: 'img-responsive'}
            %h2
              %a{href: "{% url 'projeto_detail' projeto.slug %}"}
                = projeto.nome
      -empty
        %blockquote.box-fundo
          %p Não tem Projeto cadastrado no momento.
      - if is_paginated
        .text-center
          - bootstrap_paginate page_obj range=5