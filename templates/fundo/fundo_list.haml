- extends "fundo/base_fundo.html"

- load staticfiles
- load bootstrap3

- block extra_head
- block content
  .container
    - for fundo in fundo_list
      %blockquote.box-fundo
        .row
          - if fundo.imagem
            .col-xs-5.col-sm-5.col-md-4.col-lg-4
              %img{ "src": "={fundo.imagem.url}", class: 'img-thumbnail img-responsive'}
          %h2
            %a{ href: "{% url 'serie-list' fundo.slug %}"}
              = fundo.nome
            %small
              = fundo.biblioteca
          %p
            = fundo.descricao
    -empty
      %blockquote.box-fundo
        %p NÃ£o tem Fundo cadastrado no momento.